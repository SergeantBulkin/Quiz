<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="FragmentMainMenuTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/main_menu_text_view_size</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="FragmentMainMenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="DialogCategoryItemStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainMenuCategoryButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="FragmentQuestionTextStyle">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentQuestionButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/question_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/question_button_answer_margin</item>
        <item name="android:layout_marginEnd">@dimen/question_button_answer_margin</item>
    </style>

    <style name="FragmentQuizTextViewsStyle">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>